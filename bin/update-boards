#!/usr/bin/env perl
use 5.010;
use strict;
use warnings;
use local::lib;
use FindBin;
use Path::Class;

my $base;

BEGIN {
    $base = dir($FindBin::Bin)->parent->subdir('site');
    unshift @INC, $base->parent->subdir('lib')->stringify;
}

use CPANio;

my @boards = qw( Regular::Releases );

for my $board (@boards) {
    ( my $file = $board ) =~ s{::}{/}g;
    require "CPANio/Board/$file.pm";
    "CPANio::Board::$board"->update;
}
