#!/usr/bin/env perl
use 5.010;
use strict;
use warnings;
use local::lib;
use FindBin;
use Path::Class;

my $base;

BEGIN {
    $base = dir($FindBin::Bin)->parent->subdir('site');
    unshift @INC, $base->parent->subdir('lib')->stringify;
}

use CPANio;

my @games = qw(
    Regular::Releases
    Regular::Distributions
    Regular::NewDistributions
);

for my $game (@games) {
    ( my $file = $game ) =~ s{::}{/}g;
    require "CPANio/Game/$file.pm";
    "CPANio::Game::$game"->update;
}
